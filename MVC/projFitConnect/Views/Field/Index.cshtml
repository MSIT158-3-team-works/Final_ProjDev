@section Scripts{
    <script>
        const gym = document.getElementById("gym");
        (async () => {
            const response = await fetch("https://localhost:7199/api/Gym");
            const data = await response.json();
            let str = '';
            console.log(data);
            data.forEach(item => {
                str += `<div class="col-md-4 mb-4">
                        <a href="" class="text-decoration-none text-dark">
                            <div class="card card-fixed-size">
                                        <img src="data:image/png;base64,${item.gymPhoto}" class="card-img-top" alt="">
                                <div class="card-body card-body-fixed">
                                            <h5 class="card-title">${item.gymName}</h5>
                                    <p class="card-text">${item.gymDescribe}</p>
                                </div>
                            </div>
                        </a>
                    </div>`;
            })
            gym.innerHTML = str;
        })();
        const art = document.getElementById("art");

        (async () => {
            try {
                const response = await fetch("https://localhost:7199/api/Gym");
                const data = await response.json();
                let list = ''; 

                const item = data[0];

                list += `
                    <article class="col-md-4">
                        <h2>地址</h2>
                        <p>${item.gymAddress}</p>
                        <h2>營業時間</h2>
                        <p>${item.gymTime}</p>
                        <h2>簡介</h2>
                        <p>${item.gymIntro}</p>
                        <h2>交通</h2>
                        <p>${item.gymTraffic}</p>
                        <h2>停車場</h2>
                        <p>${item.gymPark}</p>
                    </article>
                `;

                art.innerHTML = list;
                console.log(item);
            } catch (error) {
                console.error("Error fetching data:", error);
            }
        })();
        const img = document.getElementById("img");

        (async () => {
            try {
                const response = await fetch("https://localhost:7199/api/FieldInfo");
                const data = await response.json();
                let list = '';

                const item = data[0];

                list += `
                                        <img src="data:image/png;base64,${item.fieldPhoto}" class="img-fluid rounded-1 size" alt="">
                        `;

                img.innerHTML = list;
                console.log(item);
            } catch (error) {
                console.error("Error fetching data:", error);
            }
        })();
    </script>
