@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        const div = document.getElementById("div");
        (async () => {
            const response = await fetch("https://localhost:7199/api/Gym");
            const data = await response.json();
            let str = '';
            console.log(data);
            data.forEach(item => {
                str += `<div class="card-container">
                                    <div class="card mb-3">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                                <img src="data:image/png;base64,${item.gymPhoto}" class="img-fluid rounded-start">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                                        <h5 class="card-title">${item.gymName}</h5>
                                                            <p class="card-text"><b>營業時間:</b>${item.gymTime}</p>
                                                                        <p class="card-text"></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`;
            })
            div.innerHTML = str;
        })();
    </script>
}