</body>
@section Scripts{
    <script>
        let _id = -1
        document.addEventListener("DOMContentLoaded", async () => {
            const params = new URLSearchParams(window.location.search);
            const gymId = params.get('id');
            if (gymId) {
                try {
                    const response = await fetch(`https://localhost:7199/api/Gym/`+`${gymId}`);
                    const item = await response.json();
                    if (item) {
                        document.getElementById("head").textContent = item.gymName;
                        document.getElementById("main-photo").src = `data:image/png;base64,${item.gymPhoto}`;
                        document.getElementById("field-photo").src = `data:image/png;base64,${item.fieldPhoto}`;

                        let artContent = `
                            <h2>地址</h2>
                            <p>${item.gymAddress}</p>
                            <h2>營業時間</h2>
                            <p>${item.gymTime}</p>
                            <h2>簡介</h2>
                            <p>${item.gymIntro}</p>
                            <h2>交通</h2>
                            <p>${item.gymTraffic}</p>
                            <h2>停車場</h2>
                            <p>${item.gymPark}</p>
                        `;
                        document.getElementById("art").innerHTML = artContent;
                    } else {
                        console.error("No data found for the given ID.");
                    }
                } catch (error) {
                    console.error("Error fetching data:", error);
                }
            }

            const gymContainer = document.getElementById("gym");
            try {
                const response = await fetch("https://localhost:7199/api/Gym");
                const data = await response.json();
                let str = '';
                data.forEach(item => {
                    str += `<div class="col-md-4 mb-4">
                                <a href="field?id=${item.gymId}" class="text-decoration-none text-dark">
                                    <div class="card" style="height:400px;">
                                        <img src="data:image/png;base64,${item.gymPhoto}" class="card-img-top" style="height:200px;" alt="${item.gymName}">
                                        <div class="card-body card-body-fixed">
                                            <h5 class="card-title">${item.gymName}</h5>
                                            <p class="card-text">${item.gymDescribe}</p>
                                        </div>
                                    </div>
                                </a>
                            </div>`;
                });
                gymContainer.innerHTML = str;
            } catch (error) {
                console.error("Error fetching data:", error);
            }
        });

        const img = document.getElementById("img");
        (async () => {
            try {
                const response = await fetch("https://localhost:7199/api/FieldInfo");
