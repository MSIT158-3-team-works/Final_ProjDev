@{
    var loginMemberID = ViewBag.ID != null ? ViewBag.ID : 0;
}
@section Scripts {
    <script>
        const LoginMemberID = "@loginMemberID";
        console.log('LoginMemberID', LoginMemberID);
        const productID = @ViewBag.productid;
        const productDetail = document.querySelector('#divdetail');
        const productImage = document.querySelector('#divimage');
        const productInfo = document.querySelector('#divinfo');
        const plus = document.querySelector('#btnplus');
        const minus = document.querySelector('#btnminus');
        const purchase = document.getElementsByName("inppurchase")[0];
        const popular = document.querySelector('#divpopular');
        const recommend = document.querySelector('#divrecommend');
        const unloginlModal = new bootstrap.Modal(document.getElementById('unloginlModal'));

        //top---------------------------------------------------------------------------------------------------------
        //數量
        purchase.addEventListener('blur', event => {
            const value = parseFloat(event.target.value);
            const max = parseFloat(event.target.max);
            const min = parseFloat(event.target.min);
            if (value >= max)
                event.target.value = max.toString();
            if (value <= min)
                event.target.value = min.toString();
        });
        plus.addEventListener('click', () => { if ((+purchase.value + 1) > purchase.max) return; purchase.value = (+purchase.value + 1); })
        minus.addEventListener('click', () => { if ((+purchase.value - 1) < purchase.min) return; purchase.value = (+purchase.value - 1); })
        // 追蹤按鈕
        function showProductTrackModal() {
            const modal = new bootstrap.Modal(document.getElementById('producttrackModal'));
            modal.show();
            setTimeout(() => {
                modal.hide();
            }, 2468);
        }
        function showAlreadyTrackModal() {
            const modal = new bootstrap.Modal(document.getElementById('alreadytrackModal'));
            modal.show();
            setTimeout(() => {
                modal.hide();
            }, 999);
        }
        const trackButton = document.querySelector('.btn-track');
        if (trackButton) {
            const trackImg = trackButton.querySelector('img');
            let isTracked = false;

            trackButton.addEventListener('mouseover', () => {
                if (!isTracked) {
                    trackImg.src = 'https://cdn4.iconfinder.com/data/icons/twitter-29/512/166_Heart_Love_Like_Twitter-32.png';
                }
            });
            trackButton.addEventListener('mouseout', () => {
                if (!isTracked) {
                    trackImg.src = 'https://cdn0.iconfinder.com/data/icons/typicons-2/24/heart-outline-32.png';
                }
            });
            trackButton.addEventListener('click', async () => {
                if (LoginMemberID === '0') {
                    unloginlModal.show();
                    return;
                }
                trackImg.src = 'https://cdn4.iconfinder.com/data/icons/twitter-29/512/166_Heart_Love_Like_Twitter-32.png';
                isTracked = true;

                let url = 'https://localhost:7199/api/ProductTrack?memberId=' + LoginMemberID + '&productId=' + productID;
                let response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                let data = await response.text();

                if (response.ok) {
                    if (data === 'Tracked') {
                        showProductTrackModal();
                    } else {
                        showAlreadyTrackModal();
                    }
                }
            });
        }
        // 購物車按鈕
        function showShoppingcartModal() {
            const modal = new bootstrap.Modal(document.getElementById('shoppingcartModal'));
            modal.show();
            setTimeout(() => {
                modal.hide();
            }, 2468);
        }
        function showFailedModal() {
            const modal = new bootstrap.Modal(document.getElementById('failedModal'));
            modal.show();
            setTimeout(() => {
                modal.hide();
            }, 1357);
        }
        const cartButton = document.querySelector('.btn-cart');
        if (cartButton) {
            const cartImg = cartButton.querySelector('img');
            cartButton.addEventListener('mouseover', () => {
                cartImg.src = 'https://cdn3.iconfinder.com/data/icons/ui-61/32/cart6-32.png';
            });
            cartButton.addEventListener('mouseout', () => {
                cartImg.src = 'https://cdn4.iconfinder.com/data/icons/basic-ui-2-line/32/shopping-cart-shop-drop-trolly-32.png';
            });
            cartButton.addEventListener('click', async () => {
                if (LoginMemberID === '0') {
                    unloginlModal.show();
                    return;
                }
                //console.log(purchase.value);
                let url = 'https://localhost:7199/api/Shoppingcarts?memberId=' + LoginMemberID + '&productId=' + productID + '&quantity=' + purchase.value;
                let response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                let data = await response.text();

                if (response.ok) {
                    if (data === 'AddToCart') {
                        showShoppingcartModal();
                    } else {
                        showFailedModal();
                    }
                }
            });
        }
        //立即購買
        document.querySelector('#purchase-now').addEventListener('click', async() => {
            if (LoginMemberID === '0') {
                unloginlModal.show();
                return;
            }
            //console.log(purchase.value);
            let url = 'https://localhost:7199/api/Shoppingcarts?memberId=' + LoginMemberID + '&productId=' + productID + '&quantity=' + purchase.value;
            let response = await fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            let data = await response.text();
            if (response.ok) {
                setTimeout(() => {
                    window.location.assign('https://localhost:7168/linepay/shoppingcart');
                }, 100);
            } else {
                showFailedModal();
            }
        })

