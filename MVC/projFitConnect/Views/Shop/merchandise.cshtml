@{
    ViewData["Title"] = "merchandise";
}

@section Styles {
    <style>
        #content {
            width: 99%;
            overflow: hidden;
            margin: 5px auto;
        }

        .main-top{
            width: 100%;
            margin: auto;
            display: flex;
            align-items: center;
            margin: 40px auto;
            background-color: #FDFFFF;
            border-radius: 33px 0 0 0;
            border-right: 5px double #003060;
            box-shadow: 3px 0 0 #000093, 0 5px 10px rgba(0, 0, 0, 0.3);
            padding:50px 50px 50px 30px;
        }

        .article {
            width: 73%;
            float: right;
        }

        .section {
            background-color: #FBFBFF;
            border: 3px solid #FFD306;
            border-radius: 15px;
            margin: 10px 0;
            padding: 20px 26px;
            line-height: 2em;
        }

        .aside {
            width: 24%;
            float: left;
        }

        .zoom-container {
            overflow: hidden;
        }

        .zoom-img {
            transition: transform 0.5s ease;
            border-radius: 33px 0 0 0;
        }

        .zoom-container:hover .zoom-img {
            transform: scale(1.2);
        }

        .hover {
            position: relative;
        }

            .hover::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                border: 1px solid transparent;
                transition: border-color 0.3s;
                pointer-events: none;
            }

            .hover:hover::before {
                border-color: #0080FF;
                border-width: 3px;
            }

        .square-btn {
            margin-right:13px;
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            text-align: center;
            font-weight: 600;
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
            border-radius:100px;
            background-color: #FF8000;
            border: 3px double #FF2D2D;
        }

            .square-btn:hover {
                background-color: #AE0000;
            }

        .subtital{
            font-weight:700;
            font-style:italic;
            text-decoration:underline;
            margin-bottom:15px;
            color: #530766;
        }
    </style>
}
<a href="https://localhost:7168/shop/" style="text-decoration:none;">
    <h1 style="margin:100px 0 55px 0; text-align:center; font-size:4.5em;">商品頁面</h1>
</a>

<div class="main-top">
    <div style="width:100%">
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel" style="max-width: 440px; max-height: 600px;">
            <div class="carousel-inner" id="divimage">
                <div class="carousel-item active">
                    <div class="zoom-container">
                        <img src="https://media.tenor.com/vNB3iUXsxnQAAAAC/loading-gif.gif" class="d-block w-100 h-auto zoom-img" alt="...">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="zoom-container">
                        <img src="https://thumb.ac-illust.com/f1/f138ce399f19d54fc308ecd82dedd105_t.jpeg" class="d-block w-100 h-auto zoom-img" alt="...">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="zoom-container">
                        <img src="https://th.bing.com/th/id/OIP.oX-GhPy_vxElwWNphXC7cQHaKe?w=842&h=1191&rs=1&pid=ImgDetMain" class="d-block w-100 h-auto zoom-img" alt="...">
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
