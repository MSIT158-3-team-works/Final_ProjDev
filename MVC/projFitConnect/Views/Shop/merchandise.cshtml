<div style="width:80%;max-height:150px;margin:40px auto;">
    <section class="section" style="text-align:center; background-color:lightslategray;border:none;">
        <h2 class="subtital">為您推薦</h2>
        <div class="row row-cols-1 row-cols-md-6 g-4 m-auto" id="divrecommend">
            <div class="card m-2 hover" style="min-width:150px;padding-top:8px;">
                <img class="card-img-top" src="~/assets/img/header-backgrd.jpg" alt=".C" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">Joy</h4>
                    <span class="" style="font-style:italic;color:lightblue;">#category</span>
                    <p class="card-text">$1.99 USD</p>
                </div>
            </div>
        </div>
    </section>
</div>
<div style="padding-bottom:256px;">
    &emsp;
</div>
@section Scripts {
    <script>
        let productID = @ViewBag.id;
        const productDetail = document.querySelector('#divdetail');
        const productImage = document.querySelector('#divimage');
        const productInfo = document.querySelector('#divinfo');
        const plus = document.querySelector('#btnplus');
        const minus = document.querySelector('#btnminus');
        const purchase = document.getElementsByName("inppurchase")[0];
        const popular = document.querySelector('#divpopular');
        const recommend = document.querySelector('#divrecommend');

        //top---------------------------------------------------------------------------------------------------------
        purchase.addEventListener('blur', event => {
            const value = parseFloat(event.target.value);
            const max = parseFloat(event.target.max);
            if (value >= max) 
                event.target.value = max.toString();
        });
        plus.addEventListener('click', () => { if ((+purchase.value + 1) > purchase.max) return; purchase.value = (+purchase.value + 1); })
        minus.addEventListener('click', () => { if ((+purchase.value - 1) < purchase.min) return; purchase.value = (+purchase.value - 1); })
        
        //left---------------------------------------------------------------------------------------------------------
        //熱門商品
        const PopularProducts = async () => {
            let url = 'https://localhost:7199/api/Products/search';
            let response = await fetch(url, {
                method: 'POST',
                body: JSON.stringify({
                    "categoryId": 0,
                    "keyword": "",
                    "page": 1,
                    "pageSize": 3,
                    "sortBy": "popular",
                    "sortType": "asc"
                }),
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            let data = await response.json();
            console.log('PopularProducts', data.productsResult);
            //顯示資料
            const goods = data.productsResult.map(good => {
                //data:image/jpeg;base64,${good.productImage}
                //merchandise/${good.productId}
                return (`<a href="${good.productId}" style="text-decoration:none;">
                                   <div class="card mb-3 hover" style="max-width: 540px;">
                                    <div class="row g-0">
                                     <div class="col-md-4" style="text-align:center; padding-top:10px">
                                       <img src="data:image/jpeg;base64,${good.productImage}" class="img-fluid rounded-start" alt="Top3">
                                         <h6 style="font-size:0.5em;color:white;text-shadow:-1px -1px 0 crimson, 1px -1px 0 red,-1px  1px 0 red,1px  1px 0 crimson;">已售出 ${good.productSold}</h6>
                                     </div>
                                     <div class="col-md-8">
                                      <div class="card-body">
                                        <h6 class="card-title">${good.productName}</h6>
                                        <p class="card-text" style="font-weight:400;font-style:italic;">$${good.unitPrice}NTD</p>
                                      </div>
                                     </div>
                                    </div>
                                   </div>
                                  </a>`)
            })
            popular.innerHTML = goods.join("");
        }

        //right---------------------------------------------------------------------------------------------------------

        //botton---------------------------------------------------------------------------------------------------------
        //推薦商品
        const RecommendProducts = async () => {
            let sortBy = ["", "popular", "unitPrice", "categoryId", "", ""];
            let sortType = ["", "desc", "asc", "desc", "asc", "desc"];
            let randomNumber = Math.ceil(Math.random() * 5);
            //console.log(sortBy[randomNumber]);console.log(sortType[randomNumber]);
            let url = 'https://localhost:7199/api/Products/search';
            let response = await fetch(url, {
                method: 'POST',
                body: JSON.stringify({
                    "categoryId": randomNumber,
                    "keyword": "",
                    "page": 1,
                    "pageSize": 5,
                    "sortBy": sortBy[randomNumber],
                    "sortType": sortType[randomNumber]
                }),
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            let data = await response.json();
            //顯示資料
            const goods = data.productsResult.map(good => {
                return (`<div class="card m-auto hover" style="min-width:150px;padding-top:8px;">
                        <a href="${good.productId}" style="text-decoration:none;color:black">
                        <img class="card-img-top" src="data:image/jpeg;base64,${good.productImage}" alt="Recommend" style="width:100%">
                        <div class="card-body">
                            <h6 class="card-title">${good.productName}</h6>
                            <span class="" style="font-style:italic;color:lightblue;">#${good.productCategory}</span>
                            <p class="card-text">$${good.unitPrice}NTD</p>
                        </div></a></div>`)
            });
            recommend.innerHTML = goods.join("");
        }

        //載入商品資料
        const loadProduct = async () => {
            let url = 'https://localhost:7199/api/Products/' + productID;
            //console.log('url=', url);
            let response = await fetch(url);
            let data = await response.json();
            console.log(data);

            //顯示照片
            //data=>{ base64Images, images, productCategory, productCategoryId, productDetail, productId, productImage, productName, productSold, unitPrice }
            s = `<div class="carousel-item active">
                    <div class="zoom-container">
                       <img src="data:image/jpeg;base64,${data.productImage}" class="d-block w-100 h-auto zoom-img" alt="notFound">
                    </div>
                 </div>`;
            if (data.images) {
                for (var pic of data.base64Images) {
                    s += `<div class="carousel-item">
                            <div class="zoom-container">
                              <img src="data:image/jpeg;base64,${pic}" class="d-block w-100 h-auto zoom-img" alt="error">
                            </div></div>`;}}
            productImage.innerHTML = s;

            //顯示資料
            s = `<h2 style="font-weight: 600; font-family: 'Microsoft JhengHei', Arial, sans-serif;">${data.productName}</h2>
                <a href="https://localhost:7168/shop/" style="text-decoration:none;">
                <h5 style="font-style:italic;color:	#000079;">#${data.productCategory}</h5></a><br/><br/>
                <p class="card-text" style="font-weight:600;font-style:italic;">$${data.unitPrice}NTD</p>`;
            productInfo.innerHTML = s;

            //顯示詳細
            s = `${data.productDetail}`;
            productDetail.innerHTML = s;

            //推薦商品
            RecommendProducts();
            //熱門商品
            PopularProducts();
            }
        loadProduct();
    </script>
}

