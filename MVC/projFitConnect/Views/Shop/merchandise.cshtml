@section Styles {
    <style>
        #content {
            width: 99%;
            overflow: hidden;
            margin: 5px auto;
        }

        .main-top{
            width: 100%;
            margin: auto;
            display: flex;
            align-items: center;
            margin: 40px auto;
            background-color: #FDFFFF;
            border-radius: 33px 0 0 0;
            border-right: 5px double #003060;
            box-shadow: 3px 0 0 #000093, 0 5px 10px rgba(0, 0, 0, 0.3);
            padding:50px 50px 50px 30px;
        }

        .btn-track {
            border-radius: 15px;
            padding: 10px;
            border: 2px solid #4F4F4F;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background-color: white;
            font-weight:700;
        }

            .btn-track:hover {
                border-color: #dc3545;
                font-style:italic;
                color: #930000;
                text-shadow: 2px 1px 0.8px #FFD0FF;
            }

        .btn-cart {
            border-radius: 15px;
            padding: 10px;
            border: 2px solid #4F4F4F;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background-color: white;
            font-weight: 700;
        }

            .btn-cart:hover {
                border-color: deepskyblue;
                font-style: italic;
                color: #003060;
                text-shadow: 2px 1px 0.8px #D2E9FF;
            }

        .article {
            width: 73%;
            float: right;
        }

        .section {
            background-color: #FBFBFF;
            border: 3px solid #FFD306;
            border-radius: 15px;
            margin: 10px 0;
            padding: 20px 26px;
            line-height: 2em;
        }

        .aside {
            width: 24%;
            float: left;
        }

        .zoom-container {
            overflow: hidden;
        }

        .zoom-img {
            transition: transform 0.5s ease;
            border-radius: 33px 0 0 0;
        }

        .zoom-container:hover .zoom-img {
            transform: scale(1.2);
        }

        .hover {
            position: relative;
        }

            .hover::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                border: 1px solid transparent;
                transition: border-color 0.3s;
                pointer-events: none;
            }

            .hover:hover::before {
                border-color: #0080FF;
                border-width: 3px;
            }

        .square-btn {
            margin-right:13px;
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            text-align: center;
            font-weight: 600;
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
            border-radius:100px;
            background-color: #FF8000;
            border: 3px double #FF2D2D;
        }

            .square-btn:hover {
                background-color: #AE0000;
            }

        .subtital{
            font-weight:700;
            font-style:italic;
            text-decoration:underline;
            margin-bottom:15px;
            color: #530766;
        }
    </style>
}
