@section Styles {
    <style>
        #content {
            width: 100%;
            overflow: hidden;
        }

        .article {
            width: 73%;
            float: right;
        }

        .section {
            background-color: lightslategray;
            border-radius: 5px;
            margin: 10px 0;
            padding: 20px 26px;
            line-height: 2em;
        }

        .aside {
            width: 23%;
            float: left;
        }

        .pagination-container {
            display: flex;
            justify-content: center;
            padding: 10px;
        }

        .pagination {
            display: flex;
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .pagination li {
                margin: 18px 5px;
            }

            .pagination a {
                text-decoration: none;
                color: black;
                padding: 8px 16px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .pagination .active a {
                background-color: cornflowerblue;
                color: white;
                border: 1px solid cornflowerblue;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }

        .tag {
            font-style: italic;
            color: lightblue;
        }

            .tag:hover {
                font-size: 1.02em;
                color: deepskyblue;
            }

        .hover {
            position: relative;
        }

            .hover::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                border: 1px solid transparent;
                transition: border-color 0.3s;
                pointer-events: none;
            }

            .hover:hover::before {
                border-color: #0080FF;
                border-width: 3px;
            }

            .btn-track:hover {
                border-color: #dc3545;
            }

            .btn-cart:hover {
                background-color:paleturquoise;
                border-color: deepskyblue;
            }

        .seemore {
            color: #fff;
            background-color: #ffc107;
            border-color: #ffc107;
            text-decoration: none;
            font-weight: 600;
        }

            .seemore:hover {
                color: #fff;
                background-color: #0080FF;
                border-color: darkcyan;
            }
    </style>
}
