<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - projFitConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <link href="~/css/styles3.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body id="page-top">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav" style="background:rgba(128, 128, 128, 0.7)">
            <div class="container">
                <a href="https://localhost:7168/Home"><img src="~/assets/img/fitlogo.png" width=80px; alt="FitConnect Logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0 ">
                        <li class="nav-item"><a class="nav-link fs-5" href="https://localhost:7168/Home">HOME</a></li>
                        <li class="nav-item"><a class="nav-link fs-5" asp-area="" asp-controller="Trainer" asp-action="Search">找教練</a></li>
                        <li class="nav-item"><a class="nav-link fs-5" asp-area="" asp-controller="Course" asp-action="Search">找課程</a></li>
                        <li class="nav-item"><a class="nav-link fs-5" href="~/gymlist/index">找場地</a></li>
                        <li class="nav-item"><a class="nav-link fs-5" href="~/shop/index">商城</a></li>
                        <li class="nav-item"><a class="nav-link fs-5" href="~/BodyCalculator/index">身體計算器</a></li>
                        <li></li>
                        <li class="nav-item"><a class="navbar-brand fs-6" href="https://localhost:7168/Home/Login"><img src="~/assets/img/icon_profile.png" id="avatar-img" /></a></li>
                        <li class="nav-item"><a class="navbar-brand fs-6 " href=""><img src="~/assets/img/icon_shopping_cart.png" /></a></li>
                        <li class="nav-item"><a class="navbar-brand fs-6 " href=""><img src="~/assets/img/icon_customer_service.png" /></a></li>
                        <li class="nav-item"><a class="navbar-brand fs-6 " href=""><img src="~/assets/img/icon_heart_like.png" /></a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @* 圖片輪播 *@
    <div class="masthead" id="main_carousel">
        <div class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" id="pic_carousel">
                <div class="carousel-item active hpcarousel-item">
                    <img src="~/assets/img/header-bg6.jpg" class="d-block w-100" alt="Slide 1">
                </div>
                <div class="carousel-item hpcarousel-item">
                    <img src="~/assets/img/header-backgrd.jpg" class="d-block w-100" alt="Slide 2">
                </div>
                <div class="carousel-item hpcarousel-item">
                    <img src="~/assets/img/header-background.jpg" class="d-block w-100" alt="Slide 3">
                </div>
                <div class="carousel-item hpcarousel-item">
                    <img src="~/assets/img/header-bg5.jpg" class="d-block w-100" alt="Slide 4">
                </div>
                
            </div>
        </div>


        <div class="container">
            <div class="masthead-subheading">Welcome To <br> <span style="font-size: 1.6em; font-weight: bold;">FitConnect</span></div>
            <div class="masthead-heading text-uppercase">找到適合你的場館、教練、課程!</div>
            <a class="btn btn-primary btn-xl text-uppercase" href="#services">立即體驗</a>
        </div>
    </div>


    <script>
        document.getElementById('main_carousel').style.display = 'none';
        document.addEventListener('DOMContentLoaded', (event) => {
            const path = window.location.pathname;
            if (path === '/' || path === '/Home') {
                document.getElementById('main_carousel').style.display = 'block';
            }
        });
    </script>
    <div id="mainpg" style="background-color:#deebf7">
        <div class="container m-auto" style="width:130%">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <div style="background-color: #A2C4E3; padding:90px 90px;">
            <div class="container text-center" id="footer-text">
                <div class="row footer_top">
                    <div class="col-md-3 footer_information_block">
                        <div class="footer_logo_summary">
                            <p>
                                <img src="~/assets/img/fitlogo.png" style="height:180px" alt="FitConnect Logo">
                            </p>
                        </div>
                    </div>
                    <div class="col-3 footer_list_block">
                        <div class="list_head fw-bold fs-5">關於我們</div>
                        <ul class="nav flex-column m-2">
                            <li class="nav-item">最新消息</li>
                            <li class="nav-item"><a href="" target="_blank" style="color:white">聯絡我們</a></li>
                        </ul>
                    </div>
                    <div class="col-3 footer_list_block">
                        <div class="list_head fw-bold fs-5">服務提供</div>
                        <ul class="nav flex-column m-2">
                            <li class="nav-item"><a href="~/Course/Search" target="_blank" style="color:white">課程</a></li>
                            <li class="nav-item"><a href="~/shop/index" target="_blank">商城</a></li>
                            <li class="nav-item"><a href="~/healthboard/index" target="_blank" style="color:white">健康專欄</a></li>
                            <li class="nav-item"><a href="~/" target="_blank" style="color:white">成為教練</a></li>
                            <li class="nav-item"><a href="~/" target="_blank" style="color:white">提供場館</a></li>
                        </ul>
                    </div>
                    <div class="col-3 footer_list_block">
                        <div class="list_head fw-bold fs-5">條款與聲明</div>
                        <ul class="nav flex-column m-2">
                            <li class="nav-item"><a href="~/home/policy" target="_blank" style="color:white">服務條款</a></li>
                            <li class="nav-item"><a href="~/home/privacy" target="_blank" style="color:white">隱私權政策</a></li>
                            <li class="nav-item"><a href="~/home/service" target="_blank" style="color:white">退款政策</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer_bottom text-muted">
            <div class="container w-75 text-black" id="copyright">
                &copy; 2024 FitConnect. All rights reserved.
            </div>
        </div>

    </footer>

    <!-- 引入最新版的 Bootstrap樣式 -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    <script>
        window.embeddedChatbotConfig = {
            chatbotId: "5358InDMvZPUAlPDWgdir",
            domain: "www.chatbase.co"
        }
    </script>
    <script src="https://www.chatbase.co/embed.min.js"
            chatbotId="5358InDMvZPUAlPDWgdir"
            domain="www.chatbase.co"
            defer>
    </script>
    <script>
        const memberID = 9;
        const avatarimg = document.querySelector('#avatar-img');
        const MemberLogin = async () => {
            let url = 'https://localhost:7199/api/Member/users/' + memberID;
            //console.log('url=', url);
            let response = await fetch(url);
            let data = await response.json();
            console.log('Login-member',data);
            //data:image/jpeg;base64,${course.productImage}
            avatarimg.src = 'data:image/jpeg;base64,' + data.photo;
        }
        MemberLogin();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>