@{
    ViewData["Title"] = "FieldCreate";
}
<h1>新增場地</h1>
<div class="ps-3">
    <div>
        <form method="post" action="https://localhost:7199/api/Gym" enctype="multipart/form-data" id="fieldform">
            <input type="hidden" name="GymId" id="GymId" />
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <h3>請輸入場地名</h3><br />
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">場地名</span>
                            <input type="text" class="form-control" placeholder="例:50米游泳池" aria-label="場地名" aria-describedby="basic-addon1" name="FieldName">
                        </div>
                    </div>
                    <div>
                        <h3>請輸入場地樓層</h3><br />
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">樓層</span>
                            <input type="text" class="form-control" placeholder="例:1F" aria-label="樓層" aria-describedby="basic-addon1" name="Floor">
                        </div>
                    </div>
                    <div>
                        <h3>請輸入場地費用</h3><br />
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">場地費用</span>
                            <input type="text" class="form-control" placeholder="例:1000" aria-label="場地費用" aria-describedby="basic-addon1" name="FieldPayment">
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary" id="btnsubmit">送出並新增</button>
                    <a href="https://localhost:7168/Admin/GymReviewList" class="btn btn-outline-secondary">取消</a>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="formFileSm" class="form-label"><h3>上傳場地照片</h3></label>
                        <input class="form-control form-control-sm" id="formFileSm" type="file" name="UploadedFieldPhoto">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // 讀取gymId
        const params = new URLSearchParams(window.location.search);
        const gymId = params.get('id');
         console.log("gymId", gymId)
        // 設定隱藏輸入的值
        document.getElementById('GymId').value = gymId;
        const fieldform = document.getElementById('fieldform');
        fieldform.addEventListener('submit', async function (event) {
            event.preventDefault();
            const response = await fetch('https://localhost:7199/api/Gym',
                {
                    method: 'POST',
                    body: new FormData(fieldform)
                });
            const data = await response.json();
            if (data.success) {
                window.location.href = '@Url.Content("~/Admin/FieldReviewList")';
            }
            console.log(data);
        });
    </script>
}